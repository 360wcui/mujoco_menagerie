      <geom pos="0.38 -0.38 -0.2" type="box" size="0.02 0.02 0.2" rgba="0.6 0.3 0.2 1"/>
      <geom pos="-0.38 -0.38 -0.2" type="box" size="0.02 0.02 0.2" rgba="0.6 0.3 0.2 1"/>
    </body>

    <body name="block" pos="0.5 0 0.0">
      <joint name="block_free" type="free"/>
      <geom name="block_geom" type="box" size="0.03 0.03 0.05" rgba="0 0 1 1"/>
      <inertial mass="0.1" pos="0 0 0" diaginertia="0.01 0.01 0.01"/>
    </body>

  </worldbody>
</mujoco>
